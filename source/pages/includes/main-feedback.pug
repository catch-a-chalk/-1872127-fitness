- const ADDRESS = [{ header: 'Адрес:', text: 'г. Омск, ул. 60 лет Октября, 7'}, { header: 'График работы:', text: 'Пн-Вс: с 8:00 до 22:00'},]
- const CONTACT = [{ header: 'Телефон:', href: 'tel:+78005555555', text: '8-800-555-55-55'},{ header: 'Email:', href: 'mailto:omsk@supergym.ru', text: 'omsk@supergym.ru'}]

section.main-feedback
  .main-feedback__wrapper
    .main-feedback__form
      h2 Бесплатное занятие
      form(action='https://echo.htmlacademy.ru/' method='post')
        p
            label.visually-hidden(for='form-name') Имя
            input#form-name(type='text' name='form-name' placeholder='Имя' required='' autocomplete='name')
        p
            label.visually-hidden(for='form-tel') Телефон
            input#form-tel.phone(inputmode='decimal' pattern='\+7\-[0-9]{3}\-[0-9]{3}\-[0-9]{2}\-[0-9]{2}' type='tel' name='form-tel' placeholder='Телефон' required='' autocomplete='tel' minlength='16')
        button.btn-white(type='submit') Отправить
    .main-feedback__data
      h2 Контакты
      ul.main-feedback__list
        each address in ADDRESS
          li.main-feedback__item
            h3=address.header
            p=address.text
      ul.main-feedback__contacts
        each contact in CONTACT
          li.main-feedback__contact
            h3=contact.header
            a(href=contact.href)
              span=contact.text
